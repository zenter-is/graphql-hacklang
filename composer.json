{
  "name":              "Marrikulus/graphql-hacklang",
  "description":       "A PHP port of GraphQL reference implementation",
  "type":              "library",
  "license":           "BSD",
  "homepage":          "https://github.com/marrikulus/graphql-hacklang",
  "keywords":          [
    "graphql",
    "API"
  ],
  "require": {
    "php": ">=5.4,<8.0-DEV",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "GraphQL\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "GraphQL\\Tests\\": "tests/",
      "GraphQL\\Benchmarks\\": "benchmarks/",
      "GraphQL\\Examples\\Blog\\": "examples/01-blog/Blog/"
    }
  },
  "suggest": {
    "react/promise": "To use ReactPHP promise adapter"
  }
}
